<h1>Sign In</h1>
<% if notice %>
  <%= notice %>
<% end %>
<form action="/users" method="post" role="form">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <p>
    <label for="email">Email</label>
    <input type="email" id="email" name="user[email]" placeholder="Enter email">
  </p>
  <p>
    <label for="name">Name</label>
    <input type="text" id="name" name="user[name]" placeholder="Enter name">
  </p>
  <p>
    <label for="password">Password</label>
    <input type="password" id="password" name="user[password]" placeholder="Enter password">
  </p>
  <p>
    <label for="password_confirmation">Password Confirmation</label>
    <input type="password" id="password_confirmation" name="user[password_confirmation]" placeholder="Confirm password">
  </p>
  <button type="submit" class="btn btn-default">Join</button>
</form>
<p>
  <a href="/sessions/new">Already a member?</a>
</p>