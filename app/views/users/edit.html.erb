<h1>Edit</h1>
<% if notice %>
  <%= notice %>
<% end %>
<form action="/users/<%= @user.id %>" method="post" role="form">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input type='hidden' name='_method' value='patch'>
  <p>
    <label for="email">Email</label>
    <input type="email" id="email" name="user[email]" placeholder="Enter email" value="<%= @user.email %>">
  </p>
  <p>
    <label for="name">Name</label>
    <input type="text" id="name" name="user[name]" placeholder="Enter name" value="<%= @user.name %>">
  </p>
  <button type="submit" class="btn btn-default">Update</button>
</form>

<form action='/users/<%= @user.id %>' method='post'>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input name="_method" value="delete" type="hidden">
  <button type="submit">Delete Account</button>
</form>